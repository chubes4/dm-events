{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "dm-events/calendar",
	"version": "0.1.0",
	"title": "Data Machine Events Calendar",
	"category": "widgets",
	"icon": "calendar-alt",
	"description": "Display events in a calendar or list format using Data Machine Events.",
	"keywords": ["events", "calendar", "data machine"],
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"showPastEvents": {
			"type": "boolean",
			"default": false
		},
		"showFilters": {
			"type": "boolean",
			"default": true
		},
		"showSearch": {
			"type": "boolean",
			"default": true
		},
		"showDateFilter": {
			"type": "boolean",
			"default": true
		},
		"defaultDateRange": {
			"type": "string",
			"default": "current"
		},
		"enablePagination": {
			"type": "boolean",
			"default": true
		}
	},
	"textdomain": "dm-events",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"viewStyle": "file:./build/frontend.css",
	"viewScript": "file:./build/frontend.js",
	"render": "file:./render.php"
} 